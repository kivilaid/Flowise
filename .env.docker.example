# Flowise Docker Compose Environment Variables for Coolify
# Copy this file to .env and update with your values

# Server Configuration
PORT=3000
NODE_ENV=production

# PostgreSQL Database Configuration (Required)
DATABASE_NAME=flowise
DATABASE_USER=flowise
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=false

# Authentication (default: flowise/flowise)
# CHANGE THESE IN PRODUCTION!
FLOWISE_USERNAME=flowise
FLOWISE_PASSWORD=flowise

# File Storage (local by default)
STORAGE_TYPE=local
# BLOB_STORAGE_PATH=/opt/flowise/.flowise/storage

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGINS=*
IFRAME_ORIGINS=*

# Features
DISABLE_FLOWISE_TELEMETRY=true
FLOWISE_FILE_SIZE_LIMIT=50mb

# Advanced Configuration
# For distributed mode with Redis queues, S3 storage, etc.
# See documentation for additional configuration options